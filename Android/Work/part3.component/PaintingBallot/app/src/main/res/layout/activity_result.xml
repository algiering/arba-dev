<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.arba.paintingballot.ResultActivity">
    
    <ImageView
        android:id="@+id/image_result"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    
    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#000000"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="25dp"
                android:text="title"/>
            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="25dp"
                android:text="title"/>
            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="25dp"
                android:text="title"/>
            <TextView
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="25dp"
                android:text="title"/>
            <TextView
                android:id="@+id/textview5"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="25dp"
                android:text="title"/>
            <TextView
                android:id="@+id/textview6"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="25dp"
                android:text="title"/>
            <TextView
                android:id="@+id/textview7"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="25dp"
                android:text="title"/>
            <TextView
                android:id="@+id/textview8"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="25dp"
                android:text="title"/>
            <TextView
                android:id="@+id/textview9"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="25dp"
                android:text="title"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
    
            <RatingBar
                android:id="@+id/rating1"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.1"/>
    
            <RatingBar
                android:id="@+id/rating2"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.1"/>
    
            <RatingBar
                android:id="@+id/rating3"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.1"/>
    
            <RatingBar
                android:id="@+id/rating4"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.1"/>
    
            <RatingBar
                android:id="@+id/rating5"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.1"/>
    
            <RatingBar
                android:id="@+id/rating6"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.1"/>
    
            <RatingBar
                android:id="@+id/rating7"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.1"/>
    
            <RatingBar
                android:id="@+id/rating8"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.1"/>
    
            <RatingBar
                android:id="@+id/rating9"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.1"/>
        
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp">
    
            <TextView
                android:id="@+id/text_rating1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="title"
                android:textSize="20sp"/>
    
            <TextView
                android:id="@+id/text_rating2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="title"
                android:textSize="20sp"/>
    
            <TextView
                android:id="@+id/text_rating3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="title"
                android:textSize="20sp"/>
    
            <TextView
                android:id="@+id/text_rating4"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="title"
                android:textSize="20sp"/>
    
            <TextView
                android:id="@+id/text_rating5"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="title"
                android:textSize="20sp"/>
    
            <TextView
                android:id="@+id/text_rating6"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="title"
                android:textSize="20sp"/>
    
            <TextView
                android:id="@+id/text_rating7"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="title"
                android:textSize="20sp"/>
    
            <TextView
                android:id="@+id/text_rating8"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="title"
                android:textSize="20sp"/>
    
            <TextView
                android:id="@+id/text_rating9"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="title"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
