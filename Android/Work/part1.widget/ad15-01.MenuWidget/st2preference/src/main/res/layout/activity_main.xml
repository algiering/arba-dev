<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arba.st2preference.MainActivity">
    
    <CheckBox
        android:id="@+id/chkSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="사운드"/>
    
    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/chkSound"
        android:layout_below="@+id/chkSound"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="number"
        android:hint="숫자를 입력하세요"
        />
    
    <EditText
        android:id="@+id/edtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtNumber"
        android:layout_below="@+id/edtNumber"
        android:ems="10"
        android:hint="문자를 입력하세요"
        android:inputType="text"/>
    
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtText"
        android:layout_below="@+id/edtText"
        android:layout_marginTop="27dp"
        android:text="저장"/>

</RelativeLayout>
